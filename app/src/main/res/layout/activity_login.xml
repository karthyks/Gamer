<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/ic_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorPrimaryDark"
        android:layout_marginRight="50dp"
        app:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/img_center"
        app:layout_constraintEnd_toStartOf="@+id/img_center"
        app:layout_constraintTop_toTopOf="@+id/img_center"
        app:srcCompat="@drawable/ic_phone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/img_center"
        app:layout_constraintEnd_toStartOf="@+id/img_center"
        app:srcCompat="@drawable/ic_email" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:backgroundTint="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/img_center"
        app:layout_constraintEnd_toEndOf="@+id/img_center"
        app:layout_constraintStart_toStartOf="@+id/img_center"
        app:srcCompat="@drawable/ic_google" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:backgroundTint="@android:color/white"
        android:focusable="true"
        app:rippleColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/img_center"
        app:layout_constraintStart_toEndOf="@+id/img_center"
        app:srcCompat="@drawable/ic_facebook" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        app:backgroundTint="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/img_center"
        app:layout_constraintStart_toEndOf="@+id/img_center"
        app:layout_constraintTop_toTopOf="@+id/img_center"
        app:srcCompat="@drawable/ic_twitter" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorPrimaryDark"
        app:backgroundTint="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/img_center"
        app:layout_constraintTop_toBottomOf="@+id/img_center"
        app:srcCompat="@drawable/ic_github" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_yahoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorPrimaryDark"
        app:backgroundTint="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/img_center"
        app:layout_constraintTop_toBottomOf="@+id/img_center"
        app:srcCompat="@drawable/ic_yahoo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_microsoft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/colorPrimaryDark"
        android:layout_marginTop="50dp"
        app:backgroundTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/img_center"
        app:layout_constraintStart_toStartOf="@+id/img_center"
        app:layout_constraintTop_toBottomOf="@+id/img_center"
        app:srcCompat="@drawable/ic_microsoft" />


</androidx.constraintlayout.widget.ConstraintLayout>